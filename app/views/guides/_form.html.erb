<%= form_for(guide) do |f| %>
  <% if guide.errors.any? %>
    <%= guide.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "TekNuk", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>

<% end %>