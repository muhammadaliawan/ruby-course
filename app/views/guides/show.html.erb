<div class="col-sm-8 blog-main">

<h2><%= @guide.title %></h2>

<nav class="breadcrumb row">
	<div class="col">
		<%= link_to "Home", root_path, class: 'breadcrumb-item' %>
		<%= link_to @guide.topic.title, topic_path(@guide.topic), class: 'breadcrumb-item' %>

		<span class="breadcrumb-item active"><%= @guide.title %></span>

		<span class="float-right">
			<%= link_to fa_icon('pencil-square-o'), edit_guide_path(@guide) if logged_in?(:site_admin) %>
			<%= link_to fa_icon('trash'), @guide, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
		</span>
	</div>
</nav>

<p><%= @guide.topic.title %></p>

<%= link_to 'Edit', edit_guide_path(@guide) if logged_in?(:site_admin) %>

<p>
	<%= markdown @guide.content %>
</p>

<%= render 'comments/comment_form' %>

<div id="comments" data-guide-id="<%= @guide.id %>">
	<%= render @guide.comments %>
</div>

</div>
