<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csrf_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag 'guides', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/guide_nav' %>
    <%= render 'shared/guide_masthead'%>


    <div class="container">

      <div class="row">

        <%= yield %>

        <%= render 'shared/guide_sidebar'%>

      </div>

        <%= render 'shared/guide_footer'%>
        <%= source_helper("guides") %>

    </div>


  </body>
</html>
